<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.unb.deolhonoenade.view.ComparacaoInstituicao"
    tools:ignore="MergeRootFrame" >

    <TextView
        android:id="@+id/cursoSelecionado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
        android:id="@+id/estados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cursoSelecionado1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:contentDescription="para escolher um estado" />

    <TextView
        android:id="@+id/cursoSelecionado1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/cursoSelecionado"
        android:layout_below="@+id/cursoSelecionado"
        android:layout_marginTop="16dp"
        android:text="@string/text_Estado"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/cidades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/cidade1"
        android:layout_marginTop="18dp"
        android:contentDescription="para escolher uma cidade" />

    <TextView
        android:id="@+id/cidade1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cursoSelecionado1"
        android:layout_below="@+id/estados"
        android:layout_marginTop="18dp"
        android:text="@string/text_Cidade"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/spinnerIES"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/estado2"
        android:layout_marginTop="15dp"
        android:contentDescription="para escolher uma instituição" />

    <TextView
        android:id="@+id/estado2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cidade1"
        android:layout_below="@+id/cidades"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="16dp"
        android:text="Selecione uma Instituicao"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/ies1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Selecione a segunda IES"
        android:textColor= "#FFFF" 
        android:background="@layout/layout_botao"
        android:contentDescription="para selecionar a segunda IES" />

</RelativeLayout>