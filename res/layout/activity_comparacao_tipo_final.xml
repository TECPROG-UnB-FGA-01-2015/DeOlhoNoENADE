<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.unb.deolhonoenade.view.ComparacaoTipoFinal"
    tools:ignore="MergeRootFrame" >

    <TextView
        android:id="@+id/EstadoTipoFinal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="48dp"
        android:text="Escolha o segundo Estado" />

    <Spinner
        android:id="@+id/EstadoT2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/EstadoTipoFinal1"
        android:layout_marginTop="22dp" />

    <TextView
        android:id="@+id/nomeCursoSelecionado2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/EstadoTipoFinal1"
        android:layout_marginTop="15dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/nomeCursoSelecionado2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
        android:id="@+id/Tipo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/EstadoTipoFinal2"
        android:layout_marginTop="26dp" />

    <Button
        android:id="@+id/ComparaT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        
        android:layout_alignRight="@+id/EstadoTipoFinal1"
        android:layout_marginBottom="41dp"
        
        android:text="@string/button_Comparacao"
        android:textColor= "#FFFF" 
        android:background="@layout/layout_botao" />

    <TextView
        android:id="@+id/EstadoTipoFinal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/EstadoT2"
        android:layout_marginTop="38dp"
        android:text="Escolha o segundo Tipo" />

    <Spinner
        android:id="@+id/Tipo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/EstadoTipoFinal2"
        android:layout_marginTop="31dp" />

</RelativeLayout>

